{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C Program",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run C Program",
      "type": "shell",
      "command": "${fileDirname}/${fileBasenameNoExtension}",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
